# ===========================================
# REQUIRED: Google Sheets API Configuration
# ===========================================
GOOGLE_API_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_API_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# ===========================================
# STORAGE BACKEND (choose one)
# ===========================================
# Options: aws-s3, cloudflare-r2, fly-volumes, local
STORAGE_BACKEND=aws-s3

# --- AWS S3 Configuration (if STORAGE_BACKEND=aws-s3) ---
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
STATIC_SITE_S3_BUCKET=your-static-site-bucket
S3_BUCKET_NAME=your-s3-bucket-name

# --- Cloudflare R2 Configuration (if STORAGE_BACKEND=cloudflare-r2) ---
# R2_ACCOUNT_ID=your-cloudflare-account-id
# R2_ACCESS_KEY_ID=your-r2-access-key
# R2_SECRET_ACCESS_KEY=your-r2-secret-key
# R2_BUCKET_NAME=your-r2-bucket
# R2_PUBLIC_DOMAIN=your-custom-domain.com  # Optional

# --- Fly.io Volumes Configuration (if STORAGE_BACKEND=fly-volumes) ---
# FLY_VOLUME_PATH=/data
# FLY_APP_URL=https://your-app.fly.dev  # Optional

# --- Local Filesystem Configuration (if STORAGE_BACKEND=local) ---
# LOCAL_STORAGE_PATH=./local-storage

# ===========================================
# OPTIONAL: CDN Configuration
# ===========================================
# CloudFront (AWS) - optional, skipped if not set
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id

# ===========================================
# OPTIONAL: Notifications
# ===========================================
# Slack - optional, skipped if not set
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===========================================
# OPTIONAL: Error Monitoring
# ===========================================
# Honeybadger - optional, skipped if not set
HONEYBADGER_API_KEY=your-honeybadger-api-key
HONEYBADGER_CHECK_IN_TOKEN=your-honeybadger-checkin-token

# ===========================================
# Server Configuration (for Fly.io deployment)
# ===========================================
PORT=8080
CRON_SCHEDULE="0 * * * *"
RUN_ON_STARTUP=false

# ===========================================
# Development/Debug Options
# ===========================================
WRITE_DEBUG_FILES=false
RUN_LOCAL=false
